{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/bin/index.ts",
        "run",
        "${workspaceFolder}",
        "-c",
        "${workspaceFolder}/debug/config.json"
      ]
    }
  ]
}