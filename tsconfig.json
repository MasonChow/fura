{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declarationDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/test"
  ]
}