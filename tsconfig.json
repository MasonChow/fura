{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "incremental": true,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/test",
  ],
}